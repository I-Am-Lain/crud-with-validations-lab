<h1>The edit form</h1>

<%= form_for @song do |s| %>
    <%= s.label :title %><br>
    <%= s.text_field :title %><br><br>

    <%= s.label :artist_name %><br>
    <%= s.text_field :artist_name %><br><br>

    <%= s.label :release_year %><br>
    <%= s.text_field :release_year %><br><br>

    <%= s.label :released %><br>
    <%= s.check_box :released %><br><br> #################Capybara wanted a checkbox

    <%= s.label :genre %><br>
    <%= s.text_field :genre %><br><br>

    <%= s.submit %>
<% end %>